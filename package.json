{
  "name": "eddy-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "pnpm run build:packages && pnpm run dev:all",
    "dev:all": "pnpm --filter @eddy/app dev & pnpm run dev:packages",
    "dev:packages": "pnpm --filter \"./packages/*\" --filter \"!@eddy/app\" dev",
    "build": "pnpm run build:packages && pnpm --filter @eddy/app build",
    "build:packages": "pnpm --filter \"./packages/*\" --filter \"!@eddy/app\" build",
    "preview": "pnpm --filter @eddy/app preview",
    "test": "pnpm -r test",
    "test:run": "pnpm -r test:run",
    "test:browser": "pnpm --filter @eddy/codecs test:browser",
    "test:browser:run": "pnpm --filter @eddy/codecs test:browser:run",
    "perf": "node --experimental-strip-types scripts/perf-test.ts",
    "types": "pnpm -r types",
    "sync-issues": "node --experimental-strip-types scripts/sync-graph-to-issues.ts"
  },
  "devDependencies": {
    "diagonjs": "^1.6.1",
    "puppeteer": "^24.34.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "@atproto/api": "^0.13.35"
  }
}
